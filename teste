document.getElementById('yes-button').addEventListener('click', function() {
    var heart = document.querySelector('.heart');
    var buttonContainer = document.querySelector('.button-container');
    
    // Anima√ß√£o de fogos
    var fireworks = document.createElement('div');
    fireworks.className = 'firework';
    buttonContainer.appendChild(fireworks);
    
    // Remover bot√µes
    document.getElementById('yes-button').remove();
    document.getElementById('no-button').remove();
    
    // Texto e emoji
    var text = document.createElement('p');
    text.textContent = 'Sim! Vamos at√© o altar üíç‚ù§Ô∏è';
    text.style.fontSize = '24px';
    text.style.marginTop = '20px';
    buttonContainer.appendChild(text);
    
    // Remover cora√ß√£o ap√≥s algum tempo
    setTimeout(function() {
        heart.style.display = 'none';
    }, 3000);
});

document.getElementById('no-button').addEventListener('click', function() {
    var noButton = document.getElementById('no-button');
    noButton.style.animation = 'runAway 0.5s ease-out forwards';
    
    // Desativar o bot√£o depois da anima√ß√£o
    setTimeout(function() {
        noButton.disabled = true;
    }, 500);
});
